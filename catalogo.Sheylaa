        { imagen: "Decoraciónmanoalzada9.jpg", titulo: "Uñas Pastel 4", precio: "140 córdobas" },
        { imagen: "Decoraciónmanoalzada10.jpg", titulo: "Diseño Abstracto 4", precio: "160 córdobas" },
        { imagen: "Decoraciónmanoalzada11.jpg", titulo: "Uñas Neón 4", precio: "155 córdobas" },
