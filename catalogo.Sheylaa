        { imagen: "design3_8.jpg", titulo: "Diseño Acrílico 3", precio: "170 córdobas" },
        { imagen: "design3_9.jpg", titulo: "Uñas Pastel 3", precio: "140 córdobas" },
        { imagen: "design3_10.jpg", titulo: "Diseño Abstracto 3", precio: "160 córdobas" },
        { imagen: "design3_11.jpg", titulo: "Uñas Neón 3", precio: "155 córdobas" },
