        { imagen: "foto8.jpg", titulo: "Diseño 8", precio: "170 córdobas" },
        { imagen: "foto9.jpg", titulo: "Diseño 9", precio: "140 córdobas" },
        { imagen: "foto10.jpg", titulo: "Diseño 10", precio: "160 córdobas" },
