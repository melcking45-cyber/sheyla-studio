        { imagen: "Decoraciónmanoalzada14.jpg", titulo: "Diseño 3D 4", precio: "175 córdobas" },
        { imagen: "Decoraciónmanoalzada15.jpg", titulo: "Uñas Elegantes 4", precio: "160 córdobas" }
      ]
    };

    function mostrarCatalogo() {
      document.getElementById("catalogo-modal").style.display = "block";
    }

    function cerrarCatalogo() {
      document.getElementById("catalogo-modal").style.display = "none";
    }

    function mostrarModal(id) {
      const contenedor = document.getElementById("contenedorOpciones");
      contenedor.innerHTML = "";
      const opciones = diseños[id] || [];
      opciones.forEach((opcion, index) => {
        contenedor.innerHTML += `
          <div class="opcion-container">
            <div class="opcion">
              <img src="${opcion.imagen}" alt="${opcion.titulo}">
              <p>${opcion.titulo}</p>
              <span>${opcion.precio}</span>
              <div class="botones">
                <button onclick="mostrarImagenAmpliada('${opcion.imagen}', '${opcion.titulo}')">Ver Imagen</button>
                <a href="https://wa.me/505XXXXXXXX?text=Quiero%20reservar%20el%20${encodeURIComponent(opcion.titulo)}" class="btn-reservar">Reservar</a>
              </div>
            </div>
          </div>
        `;
      });
      document.getElementById("modal").style.display = "block";
    }

    function cerrarModal() {
      document.getElementById("modal").style.display = "none";
    }

    function mostrarImagenAmpliada(imagen, titulo) {
      const imagenAmpliada = document.getElementById("imagen-ampliada");
      imagenAmpliada.src = imagen;
      imagenAmpliada.alt = titulo;
      document.getElementById("imagen-modal").style.display = "block";
    }

    function cerrarImagenAmpliada() {
      document.getElementById("imagen-modal").style.display = "none";
    }
  </script>

</body>
</html>










