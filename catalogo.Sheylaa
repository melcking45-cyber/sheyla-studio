      ],
      4: [
        { imagen: "Decoraciónmanoalzada1.jpg", titulo: "Diseño Floral 4", precio: "150 córdobas" },
        { imagen: "Decoraciónmanoalzada2.jpg", titulo: "Uñas Brillantes 4", precio: "160 córdobas" },
