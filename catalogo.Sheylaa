<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sheyla Nails Studio</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #6a0dad;
      color: white;
      scroll-behavior: smooth;
    }

    h1, h2, p {
      text-align: center;
    }

    /* Presentación - Imágenes horizontales debajo del texto */
    .presentacion {
      width: 100%;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 20px;
      overflow: hidden;
    }

    .info-presentacion {
      width: 100%;
      text-align: center;
      text-shadow: 2px 2px 8px #000;
      margin-bottom: 30px;
    }

    .info-presentacion h1 {
      font-size: 48px;
      margin-bottom: 10px;
    }

    .info-presentacion p {
      font-size: 20px;
      margin-bottom: 20px;
    }

    .descripcion-extra {
      font-size: 18px;
      margin-top: 20px;
      max-width: 800px;
      text-shadow: 1px 1px 4px #000;
      transition: transform 0.3s ease-in-out;
    }

    .descripcion-extra:hover {
      transform: scale(1.05);
    }

    .image-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 10px;
      width: 100%;
      max-width: 1200px;
    }

    .imagen-container {
      position: relative;
      padding: 8px;
      border-radius: 12px;
      width: 23%;
      max-width: 300px;
      min-width: 150px;
      display: block;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .imagen-container:hover {
      transform: scale(1.1);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .imagen-container::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, #ff0080, #7928ca, #00ffff, #ff0080);
      background-size: 600% 600%;
      animation: animarBorde 6s linear infinite;
      border-radius: 12px;
      z-index: 0;
    }

    .imagen-container img {
      position: relative;
      z-index: 1;
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
      display: block;
      visibility: visible;
    }

    .image-container .imagen-container:nth-child(1),
    .image-container .imagen-container:nth-child(3) {
      margin-top: -40px;
    }

    .image-container .imagen-container:nth-child(2),
    .image-container .imagen-container:nth-child(4) {
      margin-top: 40px;
    }

    .btn-continuar {
      padding: 12px 24px;
      background: #25d366;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      cursor: pointer;
      text-decoration: none;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out, background-color 0.2s ease-in-out;
    }

    .btn-continuar:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      background-color: #20b858;
    }

    .btn-continuar:active {
      transform: translateY(0);
      box-shadow: none;
    }

    /* Media query para pantallas pequeñas */
    @media screen and (max-width: 768px) {
      .info-presentacion h1 {
        font-size: 36px;
      }

      .info-presentacion p {
        font-size: 16px;
      }

      .descripcion-extra {
        font-size: 16px;
        margin-top: 15px;
      }

      .imagen-container {
        width: 45%;
        max-width: 200px;
        min-width: 120px;
      }

      .imagen-container img {
        height: 150px;
      }

      .image-container .imagen-container:nth-child(1),
      .image-container .imagen-container:nth-child(3) {
        margin-top: -20px;
      }

      .image-container .imagen-container:nth-child(2),
      .image-container .imagen-container:nth-child(4) {
        margin-top: 20px;
      }
    }

    /* Secciones (dentro del modal) */
    .secciones {
      padding: 40px 20px;
    }

    .seccion {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
      margin-bottom: 40px;
    }

    .cuadro-container {
      position: relative;
      padding: 10px;
      border-radius: 20px;
      width: 260px;
      max-width: 90%;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .cuadro-container:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .cuadro-container::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, #ff0080, #7928ca, #00ffff, #ff0080);
      background-size: 600% 600%;
      animation: animarBorde 6s linear infinite;
      border-radius: 20px;
      z-index: 0;
    }

    .cuadro {
      position: relative;
      z-index: 1;
      background-color: white;
      color: #333;
      padding: 15px;
      border-radius: 15px;
      text-align: center;
    }

    .cuadro img {
      width: 100%;
      border-radius: 10px;
      object-fit: cover;
      height: 180px;
      transition: transform 0.3s ease-in-out;
    }

    .cuadro img:hover {
      transform: scale(1.1);
    }

    .cuadro p {
      margin: 10px 0;
      font-weight: bold;
    }

    .cuadro button {
      background-color: #25d366;
      color: white;
      padding: 8px 14px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
      margin-bottom: 10px;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out, background-color 0.2s ease-in-out;
    }

    .cuadro button:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      background-color: #20b858;
    }

    .cuadro button:active {
      transform: translateY(0);
      box-shadow: none;
    }

    .btn-regresar {
      background-color: #ff0080;
      margin-top: 10px;
    }

    .btn-regresar:hover {
      background-color: #e60073;
    }

    @keyframes animarBorde {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Modal */
    .modal {
      display: none;
      position: fixed;
      z-index: 999;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow-y: auto;
      background-color: #6a0dad;
      animation: fadeIn 0.3s ease-in-out;
    }

    .modal-content {
      background: white;
      margin: 50px auto;
      padding: 20px;
      border-radius: 20px;
      max-width: 1000px;
      color: #333;
      text-align: center;
      animation: slideIn 0.3s ease-in-out;
    }

    .modal h3 {
      margin-bottom: 20px;
      text-align: center;
    }

    .galeria-modal {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }

    .opcion-container {
      position: relative;
      padding: 8px;
      border-radius: 12px;
      width: 220px;
      max-width: 90%;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .opcion-container:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .opcion-container::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, #ff0080, #7928ca, #00ffff, #ff0080);
      background-size: 600% 600%;
      animation: animarBorde 6s linear infinite;
      border-radius: 12px;
      z-index: 0;
    }

    .opcion {
      position: relative;
      z-index: 1;
      background: white;
      border-radius: 8px;
      padding: 10px;
      text-align: center;
    }

    .opcion img {
      width: 100%;
      border-radius: 8px;
      height: 140px;
      object-fit: cover;
      transition: transform 0.3s ease-in-out;
    }

    .opcion img:hover {
      transform: scale(1.1);
    }

    .opcion p {
      margin: 10px 0 5px;
      font-weight: bold;
    }

    .opcion span {
      display: block;
      color: #555;
      margin-bottom: 8px;
    }

    .opcion .botones {
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .opcion button,
    .opcion .btn-reservar {
      display: inline-block;
      background-color: #25d366;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
      text-decoration: none;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out, background-color 0.2s ease-in-out;
    }

    .opcion button:hover,
    .opcion .btn-reservar:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      background-color: #20b858;
    }

    .opcion button:active,
    .opcion .btn-reservar:active {
      transform: translateY(0);
      box-shadow: none;
    }

    .cerrar-modal {
      margin-top: 30px;
      text-align: center;
    }

    .cerrar-modal button {
      background: crimson;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      cursor: pointer;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out, background-color 0.2s ease-in-out;
    }

    .cerrar-modal button:hover {
      transform: translateY(-3px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      background-color: #b22222;
    }

    .cerrar-modal button:active {
      transform: translateY(0);
      box-shadow: none;
    }

    /* Modal para imagen ampliada */
    #imagen-modal .modal-content {
      max-width: 90vw;
      padding: 10px;
    }

    #imagen-modal img {
      width: 100%;
      max-width: 90vw;
      max-height: 80vh;
      object-fit: contain;
      border-radius: 10px;
      margin-bottom: 20px;
      transition: transform 0.3s ease-in-out;
    }

    #imagen-modal img:hover {
      transform: scale(1.05);
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slideIn {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body>

  <!-- IMÁGENES HORIZONTALES DEBAJO DEL TEXTO -->
  <div class="presentacion" id="inicio">
    <div class="info-presentacion">
      <h1>Sheyla Nails Studio</h1>
      <p>Estilo, elegancia y belleza en cada diseño de uñas.</p>
      <button class="btn-continuar" onclick="mostrarCatalogo()">Continuar</button>
    </div>
    <div class="image-container">
      <div class="imagen-container">
        <img src="fotoo1.jpg" alt="Diseño 1">
      </div>
      <div class="imagen-container">
        <img src="fotoo3.jpg" alt="Diseño 2">
      </div>
      <div class="imagen-container">
        <img src="fotoo2.jpg" alt="Diseño 3">
      </div>
      <div class="imagen-container">
        <img src="fotoo4.jpg" alt="Diseño 4">
      </div>
    </div>
    <p class="descripcion-extra">Descubre nuestros diseños únicos y personalizados para cada cliente.</p>
  </div>

  <!-- MODAL CATÁLOGO -->
  <div id="catalogo-modal" class="modal">
    <div class="modal-content">
      <h3>Catálogo de Diseños</h3>
      <div class="secciones">
        <div class="seccion">
          <div class="cuadro-container">
            <div class="cuadro">
              <img src="foto.jpg" alt="">
              <p>Diseño 3D</p>
              <button onclick="mostrarModal(1)">Ver más opciones</button>
              <button class="btn-regresar" onclick="cerrarCatalogo()">Regresar</button>
            </div>
          </div>
          <div class="cuadro-container">
            <div class="cuadro">
              <img src="baby.jpg" alt="">
              <p>Baby boomer y Baby color</p>
              <button onclick="mostrarModal(2)">Ver más opciones</button>
              <button class="btn-regresar" onclick="cerrarCatalogo()">Regresar</button>
            </div>
          </div>
          <div class="cuadro-container">
            <div class="cuadro">
              <img src="Acrílicanaturales1.jpg" alt="">
              <p>Acrílica naturales</p>
              <button onclick="mostrarModal(3)">Ver más opciones</button>
              <button class="btn-regresar" onclick="cerrarCatalogo()">Regresar</button>
            </div>
          </div>
          <div class="cuadro-container">
            <div class="cuadro">
              <img src="Decoraciónmanoalzada.jpg" alt="">
              <p>Decoración mano alzada</p>
              <button onclick="mostrarModal(4)">Ver más opciones</button>
              <button class="btn-regresar" onclick="cerrarCatalogo()">Regresar</button>
            </div>
          </div>
        </div>
      </div>
      <div class="cerrar-modal">
        <button onclick="cerrarCatalogo()">Cerrar catálogo</button>
      </div>
    </div>
  </div>

  <!-- MODAL OPCIONES -->
  <div id="modal" class="modal">
    <div class="modal-content">
      <h3>Opciones de Diseño</h3>
      <div class="galeria-modal" id="contenedorOpciones"></div>
      <div class="cerrar-modal">
        <button onclick="cerrarModal()">Cerrar galería</button>
      </div>
    </div>
  </div>

  <!-- MODAL IMAGEN AMPLIADA -->
  <div id="imagen-modal" class="modal">
    <div class="modal-content">
      <img id="imagen-ampliada" src="" alt="Imagen ampliada">
      <div class="cerrar-modal">
        <button onclick="cerrarImagenAmpliada()">Cerrar</button>
      </div>
    </div>
  </div>

  <!-- SCRIPTS -->
  <script>
    const diseños = {
