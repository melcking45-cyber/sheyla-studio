        { imagen: "Decoraciónmanoalzada4.jpg", titulo: "Diseño Geométrico 4", precio: "155 córdobas" },
        { imagen: "Decoraciónmanoalzada5.jpg", titulo: "Uñas Mate 4", precio: "145 córdobas" },
        { imagen: "Decoraciónmanoalzada6.jpg", titulo: "Diseño Glitter 4", precio: "165 córdobas" },
        { imagen: "Decoraciónmanoalzada7.jpg", titulo: "Estilo Francés 4", precio: "150 córdobas" },
